@using OdeToFood.Core
@model Restaurant

    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>
        <div class="card-footer">
            <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
                <i class="bi-zoom-in text-success" data-bs-toggle="tooltip" data-bs-placement="top" title="Details"></i>
            </a>
            <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
                <i class="bi-pencil-square text-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"></i>
            </a>
            <a class="btn btn-lg" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
                <i class="bi-trash text-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"></i>
            </a>
        </div>
    </div>

