@page "{restaurantId:int}"

@model OdeToFood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Restaurant.Name</h2>

<div class="container-fluid">
    @if(Model.Message!=null)
     {
        <div class="alert alert-info">@Model.Message</div>
     }
    <dl class="row">
        <dt class="col-sm-3">Id</dt>
        <dd class="col-sm-9">@Model.Restaurant.Id</dd>

        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@Model.Restaurant.Location</dd>

        <dt class="col-sm-3">Cuisine</dt>
        <dd class="col-sm-9">@Model.Restaurant.Cuisine</dd>
    </dl>
</div>

<a asp-page="./List" class="btn btn-outline-primary">All Restaurants</a>